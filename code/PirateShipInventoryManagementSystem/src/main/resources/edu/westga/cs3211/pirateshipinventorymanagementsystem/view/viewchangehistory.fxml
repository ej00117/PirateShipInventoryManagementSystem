<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420.0" prefWidth="480.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <Label layoutX="150.0" layoutY="20.0" text="View Change History">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <ListView fx:id="changeLogListView"
                  layoutX="10.0" layoutY="70.0"
                  prefHeight="220.0" prefWidth="460.0" />

        <Label layoutX="14.0" layoutY="300.0" text="Sort Options" />

        <CheckBox fx:id="isPerishable"
                  layoutX="11.0" layoutY="320.0"
                  text="Perishables" />

        <CheckBox fx:id="isLiquid"
                  layoutX="11.0" layoutY="340.0"
                  text="Liquids" />

        <CheckBox fx:id="isFlammable"
                  layoutX="11.0" layoutY="360.0"
                  text="Flammables" />

        <ComboBox fx:id="userComboBox"
                  layoutX="305.0" layoutY="300.0"
                  prefWidth="160.0"
                  promptText="Specific User" />

        <Button fx:id="sortButton"
                layoutX="305.0" layoutY="330.0"
                text="Sort"
                onAction="#onSort" />

        <Button fx:id="resetButton"
                layoutX="390.0" layoutY="330.0"
                text="Reset"
                onAction="#onReset" />

        <Label layoutX="155.0" layoutY="300.0" text="Expiration Filter" />

        <DatePicker fx:id="startExpirationDatePicker"
                    layoutX="155.0" layoutY="320.0"
                    prefWidth="130.0"
                    promptText="Start Date" />

        <DatePicker fx:id="endExpirationDatePicker"
                    layoutX="155.0" layoutY="350.0"
                    prefWidth="130.0"
                    promptText="End Date" />

        <Button fx:id="expirationFilterButton"
                layoutX="305.0" layoutY="360.0"
                text="Filter Expired"
                onAction="#onFilterByExpiration" />

        <Button fx:id="backButton"
                layoutX="215.0" layoutY="390.0"
                text="Exit"
                onAction="#onCancel" />

    </children>

</AnchorPane>
